@model WebSoftSeo.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section styles{

<link href="~/Scripts/Plugins/Choosen/chosen.min.css" rel="stylesheet" />

    <style>
        .date-dropdowns select {
            padding: 6px;
            background: #ffffff;
            border: 1px solid #CCCCCC;
            border-radius: 3px;
            margin-right: 3px;
        }

        .date-dropdowns {
            max-width: 280px;
        }

            .date-dropdowns .year {
                float: right;
            }

            .date-dropdowns .month {
                margin-left: 14px;
            }
    </style>

}
<h1 style="padding-bottom: 30px">Sign up to WebSeoSoft</h1>

<div class="row">

    <div class="col-sm-10" style="background-color: white">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form", id = "RegisterForm"}))
        {
            @Html.AntiForgeryToken()
            <br/><br/><br/>
            //@Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            ;
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.FirstName, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.LastName, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.LastName, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.UserName, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})
                    </div>

                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Birthday, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                       <input type="date" class="form-control input-sm" name="Birthday" id="Birthday" value="" />
                      @*  @Html.Da(model => model.Birthday, new { htmlAttributes = new { @class = "form-control input-sm" } })*@
                        @Html.ValidationMessageFor(m => m.Birthday, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Gender, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8" style="padding-top: 7px">
                        @Html.RadioButtonFor(m => m.Gender, "true", new {Checked = "checked"}) Male
                        @Html.RadioButtonFor(m => m.Gender, "false") Female
                        <br/>
                        @Html.ValidationMessageFor(m => m.Gender, "", new {@class = "text-danger"})
                    </div>
                </div>

            </div>

            //            font-size: 18px;
            //font-weight: bold;
            //            padding-bottom: 10px;
            <div class="col-sm-6">
                <div class="section-heading">Your Information</div>
                <div class="section-description">Please fill out your contact information to us</div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Address, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Address, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.Address, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Skype, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Skype, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.Skype, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.PhoneNumber, new {@class = "form-control input-sm"})
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new {@class = "text-danger"})
                    </div>
                </div>

                <br/>
                <div class="section-heading">Your Skills and Work experience</div>
                <div class="section-description">This is the information required to work with us</div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Skills, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">
                        @Html.DropDownList("Skills", (MultiSelectList)ViewBag.Skills, new { multiple = "multiple", @style="width:100%" } )
                        @*@Html.TextBoxFor(m => m.Skills, new {@class = "form-control input-sm"})*@
                        @Html.ValidationMessageFor(m => m.Skills, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.WorkExperience, new { @class = "col-sm-4 control-label light-text text-left" })
                    <div class="col-sm-8">

                        @Html.EditorFor(m => m.WorkExperience, new {@class = "form-control "})
                        @Html.ValidationMessageFor(m => m.WorkExperience, "", new {@class = "text-danger"})
                    </div>

                </div>

                <div class="form-group">
                    @*@Html.LabelFor(m => m.AcceptPolicy, new {@class = "col-sm-4 control-label"})*@
                    <div class="col-sm-8 col-sm-offset-4" style="max-width: 280px">
                        <input type="checkbox" id="AcceptPolicy" name="AcceptPolicy" class="checkbox-inline"/>
                        To continue registering, you agree to the Terms of Use and privacy Policy WebSeoSoft.
                        <div id="AcceptPolicyAlert" class="text-danger hidden">Please accept Terms of Use!</div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-sm-8">
                        <input type="submit" class="btn btn-danger btn-block btn-sm " value="Create an account"/>
                    </div>
                </div>

            </div>
        }
    </div>


</div>

<div class="text-right col-sm-10 light-text" style="padding-top: 20px">
    Already have an account? <span class="text-danger "><a class="footer-link" href="/Account/Login">Log in</a></span>
</div>

@section Scripts {

<script src="~/Scripts/Plugins/Choosen/chosen.jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            $("#Skills").chosen({ max_selected_options: 5 });
            //$("#Birthday").dateDropdowns({
            //    dateFormat: 'mm/dd/yyyy',
            //    displayFormat: "dmy",
            //    daySuffixes: false
            //});

            $("input[type='submit']").click(function (event) {

                if (!$("#AcceptPolicy").is(':checked')) {
                    event.preventDefault();
                    $("#RegisterForm").validate();
                    if ($("#RegisterForm").valid()) { 
                        $("#AcceptPolicyAlert").removeClass("hidden");
                    }
                    
                } else {
                    $("#RegisterForm").submit();
                }

            });

            $("#AcceptPolicy").click(function(event) {
                if ($(this).is(':checked')) {
                    $("#AcceptPolicyAlert").addClass("hidden");
                }   

            });
        });
    </script>

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Plugins/DropDownDate/jquery.date-dropdowns.min.js"></script>
}
