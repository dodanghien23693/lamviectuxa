
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

    <link href="~/Scripts/Plugins/Choosen/chosen.min.css" rel="stylesheet" />
   <style>
    .content-block{
        padding:20px;
        }
    .text-title{
        font-size:18px;
        font-weight:bold;
        padding-bottom:20px;
    }

    .info-item{
        padding-bottom:10px;
    }
    .info-item .info-name{
        width:200px;
        display:inline-block;
        text-anchor:start;
    }

    .info-name{
        font-weight:bold;

    }

    .work-experience-group{
        margin-left:200px;
    }

    .work-experience-group .work-name{
        font-weight:550;
    }

    .info-group{
        padding-bottom:20px;
    }
    .work-experience-item{
        padding-bottom:10px;
    }

    .work-experience-item .work-placement{
        font-size:12px;
        color:#808080;
    }

    .work-experience-item .work-address{
        font-size:13px;
        color:#808080;
    }


    .manager-menu{
        position: relative;
        border-top: 1px solid #e5e5e5;
        border-bottom: 0;
        bottom: -10px;
    }

    .manager-menu a{
        font-weight: bold;
        border: 0;
        color:#555555;

    }

    .manager-menu li.active a{
       border:0;
       border-bottom: solid 5px #e2463a;
       
    }

    .manager-menu .last-online{
        position: absolute;
        bottom: 15px;
        right: 10px;
        font-size:13px;
        
    }
    .box-border {
    padding: 20px;
    border: 1px solid #f4f4f4;
    box-shadow: 0 0 3px 0 #f4f4f4;
    border-radius: 5px;
    background-color:white;
}

    input, textarea {
            max-width: 100%;
        }

    </style>
</head>
<body style="padding-top:0;background-color:#f6f6f6">

    @Html.Partial("Admin/_Header")

    @*<div class="navbar navbar-static-top " style="margin-bottom: 0; height: 20px;box-shadow: #DEDEDE 1px 2px 5px 1px;">
        <div class="container">
            @RenderSection("breadcrumbs", false)
        </div>
    </div>*@

    <div class="container body-content" style="margin-top:40px">
            <div class="row" >

                <div class="col-sm-12" >
                    <div class="box-border">
                        @Html.Partial("Admin/_AccountInfo")

                        <span style="position:relative">
                            <ul class="nav nav-tabs manager-menu">
                                <li role="presentation" class="active"><a href="/Manage/Profile">Find Jobs</a></li>
                                <li role="presentation"><a href="/Jobs/Bidded">Bidded jobs</a></li>
                                <li role="presentation"><a href="/Jobs/Manager">Jobs Manager</a></li>
                                <li role="presentation"><a href="#">FEDDBACKS</a></li>
                            </ul>
                          
                            <ul class="list-inline"></ul>
                        </span>
                    </div>
                    

                </div>

            </div>
       
        <div class="row">
            <div class="col-sm-8" >
                <div style="background-color:white;padding:30px">
                    @RenderBody()
                </div>
            </div>

            
            <div class="col-sm-4">
                <div class="box-border">
                    @RenderSection("menus", required: false)
                </div>
            </div>
        </div>

        <!-- Menu section -->
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
